<Window x:Class="OrderProcessingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderProcessingWPF"
        mc:Ignorable="d"
        Title="Order Processing" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New"/>
                <Separator/>
                <MenuItem Header="Quit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Command="ApplicationCommands.Copy"/>
                <MenuItem Command="ApplicationCommands.Cut"/>
                <MenuItem Command="ApplicationCommands.Paste"/>
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl TabStripPlacement="Left">
                <TabItem Header="{Binding Path=CustomerDetailsVM.TabName}" Padding="10">
                    <local:CustomerDetails/>
                </TabItem>
                <TabItem Header="{Binding Path=OrderDetailsVM.TabName}" Padding="10">
                    <local:OrderDetails/>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
